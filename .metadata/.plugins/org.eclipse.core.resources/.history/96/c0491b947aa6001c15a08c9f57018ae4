package day0316;

public class Pg34 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int x, y, z;
		int absX, absY, absZ;
		char signX, signY, signZ;
		
		x=10;
		x=-5;
		x=0;
		
		absX = x >= 0 ? x : -x;
		absY = y >= 0 ? y : -y;
		absZ = z >= 0 ? z : -z;
		
		signX = x > 0 ? '+' : (x==0 ? ' ': '_');
		signY = y > 0 ? '+' : (y==0 ? ' ': '_');
		signZ = z > 0 ? '+' : (z==0 ? ' ': '_');
	}

}
